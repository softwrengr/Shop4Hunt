<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context="techease.com.shop4hunt.fragments.SignupFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30sp"
            android:text="@string/app_name"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:textSize="24sp" />
        <EditText
            android:id="@+id/et_userEmail"
            android:layout_width="match_parent"
            android:layout_height="60sp"
            android:layout_marginLeft="30sp"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:backgroundTint="@color/white"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:imeOptions="actionNext"
            android:layout_marginRight="30sp"
            android:layout_marginTop="50sp"
            />

        <EditText
            android:id="@+id/et_userPassword"
            android:layout_width="match_parent"
            android:layout_height="60sp"
            android:layout_marginLeft="30sp"
            android:hint="Password"
            android:inputType="textPassword"
            android:imeOptions="actionNext"
            android:backgroundTint="@color/white"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:layout_marginRight="30sp"
            android:layout_marginTop="10sp"
            />

        <EditText
            android:id="@+id/et_UserName"
            android:layout_width="match_parent"
            android:layout_height="60sp"
            android:layout_marginLeft="30sp"
            android:hint="Name"
            android:imeOptions="actionNext"
            android:backgroundTint="@color/white"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:layout_marginRight="30sp"
            android:layout_marginTop="10sp"
            />

        <Button
            android:id="@+id/btn_signup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="30sp"
            android:layout_marginRight="30sp"
            android:layout_marginTop="20sp"
            android:background="@drawable/email_back"
            android:gravity="center"
            android:text="Sign up"
            android:textColor="@color/white" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_onboard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20sp"
        android:layout_marginLeft="30sp"
        android:text="Already onboard?"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_already_signin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20sp"
        android:layout_marginLeft="5sp"
        android:layout_toRightOf="@id/tv_onboard"
        android:text="Login"
        android:textColor="@color/white"
        android:textSize="19sp"
        android:textStyle="bold" />

</RelativeLayout>
